<Page
    x:Class="PRG2_ASSIGNMENT.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PRG2_ASSIGNMENT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="720" Width="1280">

    <Grid>
        <TextBox x:Name="guestTxt" Text="Amelia" HorizontalAlignment="Left" Margin="386,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="50"/>
        <TextBlock x:Name="guestBlk" HorizontalAlignment="Left" Margin="386,122,0,0" TextWrapping="Wrap" FontSize="25" Text="Name of guest:" VerticalAlignment="Top" Width="215" Height="36"/>
        <TextBox x:Name="adultnoTxt" HorizontalAlignment="Left" Margin="678,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="50"/>
        <TextBox x:Name="childrennoTxt" HorizontalAlignment="Left" Margin="678,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="50"/>
        <TextBox x:Name="ppTxt" Text="S1234567A" HorizontalAlignment="Left" Margin="386,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Height="50"/>
        <TextBlock x:Name="ppBlk" HorizontalAlignment="Left" Margin="386,226,0,0" TextWrapping="Wrap" FontSize="25" Text="Passport Number:" VerticalAlignment="Top" Width="215" Height="36"/>
        <TextBlock x:Name="adultnoBlk" HorizontalAlignment="Left" Margin="678,122,0,0" TextWrapping="Wrap" FontSize="25" Text="No. Of Adults:" VerticalAlignment="Top" Width="162" Height="36"/>
        <TextBlock x:Name="childrennoBlk" HorizontalAlignment="Left" Margin="678,226,0,0" TextWrapping="Wrap" FontSize="25" Text="No. Of Children:" VerticalAlignment="Top" Width="185" Height="36"/>
        <Button x:Name="searchBtn" FontSize="20" Content="Search" HorizontalAlignment="Left" Margin="500,333,0,0" VerticalAlignment="Top" Height="60" Width="101" Click="SearchBtn_Click"/>
        <Button x:Name="extendBtn" FontSize="20" Content="Extend Stay" HorizontalAlignment="Left" Margin="680,333,0,0" VerticalAlignment="Top" Height="60" Width="127"/>
        <ListView x:Name="availrmLv" HorizontalAlignment="Left" Height="326" Margin="158,267,0,0" VerticalAlignment="Top" Width="408" SelectionChanged="AvailrmLv_SelectionChanged"/>
        <TextBlock x:Name="availrmBlk" HorizontalAlignment="Left" Margin="158,226,0,0" TextWrapping="Wrap" FontSize="25" Text="Available rooms:" VerticalAlignment="Top" Width="215" Height="36"/>
        <CheckBox x:Name="breakfastCb" FontSize="17" Content="Add Breakfast" HorizontalAlignment="Left" Margin="606,361,0,0" VerticalAlignment="Top" Width="164"/>
        <CheckBox x:Name="wifiCb" FontSize="17" Content="Add Wifi" HorizontalAlignment="Left" Margin="606,412,0,0" VerticalAlignment="Top" Width="164"/>
        <CheckBox x:Name="bedCb" FontSize="17" Content="Add Bed" HorizontalAlignment="Left" Margin="606,361,0,0" VerticalAlignment="Top" Width="164"/>
        <Button x:Name="addrmBtn" FontSize="20" Content="Add Room" HorizontalAlignment="Left" Margin="604,468,0,0" VerticalAlignment="Top" Height="60" Width="160" Click="AddrmBtn_Click"/>
        <Button x:Name="removermBtn" FontSize="20" Content="Remove Room" HorizontalAlignment="Left" Margin="606,545,0,0" VerticalAlignment="Top" Height="60" Width="160" Click="RemovermBtn_Click"/>
        <CalendarDatePicker x:Name="checkInDateTxt" HorizontalAlignment="Left" Margin="386,175,0,0" VerticalAlignment="Top" Width="239"/>
        <TextBlock x:Name="chkinBlk" HorizontalAlignment="Left" Margin="386,139,0,0" TextWrapping="Wrap" FontSize="25" Text="Check In:" VerticalAlignment="Top" Width="239" Height="36"/>
        <CalendarDatePicker x:Name="checkOutDateTxt" HorizontalAlignment="Left" Margin="680,175,0,0" VerticalAlignment="Top" Width="239"/>
        <TextBlock x:Name="chkoutBlk" HorizontalAlignment="Left" Margin="680,139,0,0" TextWrapping="Wrap" FontSize="25" Text="Check Out:" VerticalAlignment="Top" Width="239" Height="36"/>
        <Button x:Name="chkrmBtn" FontSize="20" Content="Check Rooms Available" HorizontalAlignment="Left" Margin="525,249,0,0" VerticalAlignment="Top" Height="60" Width="239" Click="ChkrmBtn_Click"/>
        <TextBlock x:Name="selectrmBlk" HorizontalAlignment="Left" Margin="803,223,0,0" TextWrapping="Wrap" FontSize="25" Text="Rooms Selected:" VerticalAlignment="Top" Width="215" Height="36"/>
        <ListView x:Name="selectrmLv" HorizontalAlignment="Left" Height="203" Margin="780,267,0,0" VerticalAlignment="Top" Width="408" SelectionChanged="SelectrmLv_SelectionChanged"/>
        <Button x:Name="chkinBtn" FontSize="20" Content="Check-In" HorizontalAlignment="Left" Margin="818,532,0,0" VerticalAlignment="Top" Height="86" Width="408" Click="ChkinBtn_Click"/>
        <Button x:Name="chkoutBtn" FontSize="20" Content="Check-Out" HorizontalAlignment="Left" Margin="800,605,0,0" VerticalAlignment="Top" Height="86" Width="344"/>
        <TextBlock x:Name="title"  FontWeight="Bold"  FontSize="42" HorizontalAlignment="Left" TextAlignment="Center" TextWrapping="Wrap" Text="Hotel Guest Management System" VerticalAlignment="Top" Height="64" Width="1270" Margin="10,0,0,0"/>
        <TextBlock x:Name="memberBlk" HorizontalAlignment="Left" Margin="966,128,0,0" TextWrapping="Wrap" FontSize="18" Text="Member status:" VerticalAlignment="Top" Height="30" Width="178"/>
        <TextBlock x:Name="pointsBlk" HorizontalAlignment="Left" Margin="948,184,0,0" TextWrapping="Wrap" FontSize="18" Text="Points available:" VerticalAlignment="Top" Height="30" Width="178"/>
        <TextBox x:Name="pointsTxt" HorizontalAlignment="Left" Margin="948,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Height="75"/>
        <Button x:Name="redeemBtn" FontSize="20" Content="Redeem points" HorizontalAlignment="Left" Margin="1097,219,0,0" VerticalAlignment="Top" Height="75" Width="175"/>
        <TextBlock x:Name="invoiceBlk" HorizontalAlignment="Left" Margin="885,507,0,0" TextWrapping="Wrap" FontSize="25" Text="Invoice:" VerticalAlignment="Top" Width="102" Height="36"/>
        <TextBlock x:Name="statusBlk" HorizontalAlignment="Left" Margin="525,637,0,0" TextWrapping="Wrap" FontSize="18" Text="Status update:" VerticalAlignment="Top" Height="30" Width="178"/>
        <Button x:Name="proceedBtn" FontSize="20" Content="Proceed >" HorizontalAlignment="Left" Margin="678,333,0,0" VerticalAlignment="Top" Height="60" Width="120" Click="ProceedBtn_Click"/>
        <ListView x:Name="currentrmLv" HorizontalAlignment="Left" Height="203" Margin="410,402,0,0" VerticalAlignment="Top" Width="408"/>
        <TextBlock x:Name="currentrmBlk" HorizontalAlignment="Left" Margin="410,357,0,0" TextWrapping="Wrap" FontSize="25" Text="Current rooms:" VerticalAlignment="Top" Width="215" Height="36"/>
        <Button x:Name="backBtn1" FontSize="20" Content="Back" HorizontalAlignment="Left" Margin="500,333,0,0" VerticalAlignment="Top" Height="60" Width="101" Click="BackBtn1_Click"/>
    </Grid>
</Page>
